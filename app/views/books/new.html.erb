<div class="c-section">
  <h1 class="c-title">Create a New Book</h1>
  <%= form_for @book do |f| %>
    <div class="c-input">
      <p class="c-input_label">Thumbnail: <div class="c-input_file">
        <%= f.file_field :book_cover %></div> </p>
    </div>
    <div class="c-input">
      <p class="c-input_label">Title: <div class="c-input_text"><%= f.text_field :title %></div></p>
    </div>
    <div class="c-input">
      <p class="c-input_label">Description: <div class="c-input_text"><%= f.text_field :description %></div></p>
    </div>
    <div class="c-input">
      <p class="c-input_label">Price: <div class="c-input_text"><%= f.text_field :price %></div></p>
    </div>
    <div class="c-input">
      <% if current_user && current_user.author? %>
        <h3 class="c-title c-title--small">Author: </h3>
        <p class="c-paragraph c-paragraph--small"> <%= current_user.name %></p>
      <% else %>
        <%= f.fields_for :author do |author| %>
            <div class="c-input">
              <p class="c-input_label">Author: <div class="c-input_text"><%= author.text_field :name %></div></p>
            </div>
        <% end %>
      <% end %>
    </div>
    <div class="c-input">
      <%= f.submit "Create", class: "c-button c-button--small" %>
    </div>
  <% end %>
  <div class="c-section">
    <%= link_to "Cancel", books_path, class:"c-button c-button--warning" %>
  </div>

</div>
