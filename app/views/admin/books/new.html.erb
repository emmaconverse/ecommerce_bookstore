<h1>Create a New Book</h1>

<%= form_for @book do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <p>Description: <%= f.text_field :description %></p>
  <p>Price: <%= f.text_field :price %></p>
  <%= f.fields_for :authors do |author_form| %>
      <p>Author: <%= author_form.text_field :name %></p>
  <% end %>
  <%= f.submit "Create" %>
<% end %>
